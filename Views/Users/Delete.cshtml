}

<div class="container">
    <div class="wrapper animate__animated animate__fadeInUp">
        <div class="title"><span>Delete User</span></div>
        <dl class="row px-5 pt-5">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Role)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Role)
            </dd>
