@model Sneaky.Classes.Review

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="wrapper animate__animated animate__fadeInUp">
        <div class="title bg-danger"><span>Delete Review</span></div>
        <div class="animate__animated animate__zoomIn animate__delay-1s">
            <dl class="row px-5 pt-5">
                <div class="card border-0">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.User)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.User!.Login)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Comment)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Comment)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CreateCommentTime)
                    </dt>
                    <dd class="col-sm-10">
                        <small>@Model.CreateCommentTime.ToString("MMM dd, yyyy 'at' h:mm tt")</small>
                    </dd>
                </div>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="row button">
                    <input type="submit" value="Delete" class="btn w-25 bg-danger border-danger" />
                    <a asp-action="Index" class="btn outline-button-danger w-25">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>